<div class="d-flex flex-column w-100">
    <div class="d-flex m-2 flex-column border-5 p-4 bg-white w-100">
        <h5>Filtro</h5>
        <div class="row">
            <div class="p-3 col-2 text-center">
                <i style="font-size: 2rem;" class="rounded-circle p-4 bg-cinza-claro fa-solid fa-filter color-transp-forte"></i>
            </div>
            <div class="col-10">
                <div class="row  mt-2 w-100">
                    <!-- codigo -->
                    <div class="col-2 d-flex flex-column">
                        <span>Código</span>
                        <input type="number" class="form-control" id="filtro_id">
                    </div>
                    <!-- representante -->
                    <div class="col-4 d-flex flex-column">
                        <span>Representante</span>
                        <input type="text" class="form-control" id="filtro_representante">
                    </div>
                    <!-- cliente -->
                    <div class="col-4 d-flex flex-column">
                        <span>Cliente</span>
                        <input type="text" class="form-control" id="filtro_cliente">
                    </div>
                    <!-- limpar -->
                    <div class="col-2 d-flex flex-column" onclick="limpar_filtro()">
                        <span>Limpar</span>
                        <div class="w-100 text-center e-hover">
                            <i style="font-size: 1.6rem;" class="rounded-circle p-3 bg-vermelho-claro fa-solid fa-filter-circle-xmark color-transp-forte"></i>
                        </div>
                    </div>
                    <!-- tamanho -->
                    <!-- <div class="col d-flex flex-column">
                        <span>Tamanho</span>
                        <input type="text" class="form-control" id="filtro_descricao">
                    </div> -->
                </div>
                <div class="row  w-100">
                    <!-- regiao -->
                    <div class="col-3 d-flex flex-column">
                        <span>Região</span>
                        <select class="form-select" id="filtro_regiao">
                            <option  selected value="0">Todos</option>
                        </select>
                    </div>
                    <!-- situação -->
                    <div class="col-3 d-flex flex-column">
                        <span>Situação</span>
                        <select  class="form-select" id="filtro_situacao">
                            <option  selected value="0">Todos</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex m-2 border-5 p-4 bg-white w-100">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th width="1%" scope="col">Codigo</th>
                    <th scope="col">Representante</th>
                    <th scope="col">Cliente</th>
                    <th scope="col">Situação</th>
                    <th scope="col">Região</th>
                    <th width="1%" scope="col">Referências</th>
                    <th width="10%" scope="col">Ação</th>
                </tr>
            </thead>
            <tbody id="tb">
                <!-- dinamicamente pegando do back, se for ediçao de pedido -->
            </tbody>
        </table>
    </div>
</div>
<script type="text/javascript" src="/pedidos/script_lista.js"></script>
