<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My URLS</title>
    <link rel="stylesheet" href="../../style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/292f801b31.js" crossorigin="anonymous"></script>
    
</head>
<body class="custom-body p-0 m-0">
    <div class="container-fluid bg-info p-0 m-0">
        <!--esqueleto-->
        <div class="row p-0 m-0 bg-warning w-100">
            <!-- sidebar -->
            <div class="col-2 bg-danger">
                Column
            </div>
            <!-- conteudo -->
            <div class="col-10 p-0 ">
                <!-- linha de cima, onde esta e perfil-->
                <div class="row p-2 m-0 bg-warning w-100">
                    <div class="col-3 bg-info">
                        home > dashboard
                    </div>
                    <div class="col-9 bg-warning">
                        <div class="d-flex justify-content-end">
                            <img class="bg-white rounded-circle" src="https://cdn-icons-png.flaticon.com/512/822/822123.png" width="5%" >
                        </div>
                    </div>
                </div>
                <!-- conteudo pagina aqui -->
                <div class="row">

                </div>
                <!-- form -->
                <div class=" row p-4 m-0 ">
                    <div class="container">
                        <form>
                            <div class=" row m-0 p-0 justify-content-between">
                                <!-- pedido codigo -->
                                <div class="col-2">
                                    <label for="id" class="form-label"><b>Pedido</b></label>
                                    <% if (pedido) { %>
                                        <h2><%= pedido.id %></h2>
                                    <% } else {%>
                                        <input type="number" class="form-control" id="id" value="">
                                    <% } %> 
                                </div>
                                <!-- representante nome -->
                                <div class="col-3">
                                    <label for="representante" class="form-label"><b>Representante</b></label>
                                    <input type="text" class="form-control" id="representante" value=" <%= pedido.representante %> ">
                                </div>
                                <!-- cleinte nome  -->
                                <div class="col-3">
                                    <label for="cliente" class="form-label"><b>Cliente</b></label>
                                    <input type="text" class="form-control" id="cliente" value=" <%= pedido.cliente %> " >
                                </div>
                                <!-- data entrega  -->
                                <div class="col-3">
                                    <label for="data" class="form-label"><b>Data</b></label>
                                    <input type="text" class="form-control" id="txt_data" value=" <%= pedido.data_entrega %> ">
                                </div>
                            </div>
                            <!-- botoes -->
                            <div class="row m-2 p-2 justify-content-end">
                                <button type="button" class="m-2 w-auto btn btn-outline-success"><b>Salvar</b></button>
                                <button type="button" class="m-2 w-auto btn btn-outline-danger"><b>Cancelar</b></button>
                            </div>
                            <!-- adicionar Ref -->
                            <div class="row m-2 p-2 justify-content-end">
                                <div class="input-group w-auto">
                                    <input id="txt_add_ref" type="number" class="form-control" placeholder="Referência">
                                    <button id="btn_add_ref" class="btn btn-outline-success" type="button" onclick="table_add_ref()"><b>Adicionar</b></button>
                                </div>
                            </div>
                            <!-- pedidos lista  -->
                            <div class="row m-0 p-2">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th scope="col">Ref.</th>
                                            <th scope="col">Descrição</th>
                                            <th scope="col">Total</th>
                                            <th scope="col">RN</th>
                                            <th scope="col">P/1</th>
                                            <th scope="col">M/2</th>
                                            <th scope="col">G/3</th>
                                            <th scope="col">Ação</th>
                                        </tr>
                                    </thead>
                                    <tbody id="tb">
                                        <!-- dinamicamente pegando do back, se for ediçao de pedido -->
                                        <% pedido.referencias.forEach( pedido => { %>
                                            <tr id="tr_<%= pedido.referencia %>">
                                                <!-- setando variaveis, caso undefined seta 0 -->
                                                <% let rn= pedido.tamanhos.find( e => { return e.id_tamanho === 1 }) || 0 %> 
                                                <% let p = pedido.tamanhos.find( e => { return e.id_tamanho === 2 || e.id_tamanho === 5}) || 0 %> 
                                                <% let m = pedido.tamanhos.find( e => { return e.id_tamanho === 3 || e.id_tamanho === 6}) || 0 %> 
                                                <% let g = pedido.tamanhos.find( e => { return e.id_tamanho === 4 || e.id_tamanho === 7}) || 0 %> 
                                                <!-- descricao -->
                                                <% let desc = referencias.find(e => { return e.id === pedido.referencia }) %> 
                                                <!-- somando quantidades dessa referencia -->
                                                <% let total = 0 %>
                                                <% pedido.tamanhos.forEach(e => { total+= e.quantidade_pedido }) %>
                                                <!-- desenhando tabela  -->
                                                <td> <%= pedido.referencia %> </td>
                                                <td> <%= desc.tipo + ' ' + desc.estilo %> </td>
                                                <td> <%= total %> </td>
                                                <td width="10%"> <input type="number" class="input-transp w-100" value="<%= rn.quantidade_pedido || 0 %>">  </td>
                                                <td width="10%"> <input type="number" class="input-transp w-100" value="<%= p.quantidade_pedido  || 0 %>"> </td>
                                                <td width="10%"> <input type="number" class="input-transp w-100" value="<%= m.quantidade_pedido  || 0 %>"> </td>
                                                <td width="10%"> <input type="number" class="input-transp w-100" value="<%= g.quantidade_pedido  || 0 %>"> </td>
                                                <td> <button onClick="table_del_ref(<%= pedido.referencia %>)" class="btn btn-outline-danger  m-0 p-0 w-100" type="button">X</button> </td>

                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
<!-- script q faz chamada no back -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.26.1/axios.min.js" integrity="sha512-bPh3uwgU5qEMipS/VOmRqynnMXGGSRv+72H/N260MQeXZIK4PG48401Bsby9Nq5P5fz7hy5UGNmC/W1Z51h2GQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script type="text/javascript">
    //carregando pedidos
    // document.addEventListener('DOMContentLoaded', function() {
        
    //     axios.get('http://localhost:9090/pedidos')
    //         .then( resp => console.log(resp))
    //         .catch(error => console.log(error))
    // })
    let pedido = (<%- JSON.stringify(pedido) %>)
    let referencias = (<%- JSON.stringify(referencias) %>)

    
    
    
    //adiciona ao json global
    function table_add_ref(){
        let txt_add_ref = document.getElementById('txt_add_ref').value || 0
        if(!txt_add_ref) window.alert('referencia invalida')
        else{
            let ref = referencias.find( e => {
                return e.id === parseInt(txt_add_ref)
            })
            if(!ref) window.alert('referencia não encontrada')
            else{
                if(pedido.referencias.find( e => { return e.referencia === ref.id}))
                    window.alert('referencia ja adicionada')
                else{
                    let model =
                    {
                        referencia: ref.id,
                        tamanhos: []
                    }
                    pedido.referencias.push(model)
                }
            }
        }
        draw_table()
    }
    //remove do json global
    function table_del_ref(ref){
        //remove do json global
        pedido.referencias = pedido.referencias.filter( e =>{
            return e.referencia !== ref
        })
        draw_table()
    }
    //desenha a tabela baseado no json
    function draw_table(){
        let tbody = document.getElementById('tb')
        tbody.innerHTML = ''
        pedido.referencias.forEach(e => {
            let tr = tbody.insertRow()
            //id referencia
            tr.insertCell().appendChild(document.createTextNode(e.referencia))
            //descricao
            let desc = referencias.find(r => { return r.id === e.referencia })
            tr.insertCell().appendChild(document.createTextNode(desc.tipo + ' ' + desc.estilo))
            //total
            let total = 0 
            e.tamanhos.forEach(p => { total+= p.quantidade_pedido })
            tr.insertCell().appendChild(document.createTextNode(total))
            //input model
            let input = document.createElement('input')
            input.className = 'input-transp w-100'
            input.type = 'number'
            let inputs = [input.cloneNode(),input.cloneNode(),input.cloneNode(),input.cloneNode()]
            //rn
            let rn = (e.tamanhos.find( t => { return  t.id_tamanho === 1}) || 0)
            inputs[0].value = rn.quantidade_pedido || 0
            tr.insertCell().appendChild(inputs[0])
            //1/p
            let p = (e.tamanhos.find( t => { return t.id_tamanho === 2 || t.id_tamanho === 5}) || 0)
            inputs[1].value = p.quantidade_pedido || 0
            tr.insertCell().appendChild(inputs[1])
            //2/m
            let m= (e.tamanhos.find( t => { return t.id_tamanho === 3 || t.id_tamanho === 6}) || 0)
            inputs[2].value = m.quantidade_pedido || 0
            tr.insertCell().appendChild(inputs[2])
            //1/p
            let g = (e.tamanhos.find( t => { return t.id_tamanho === 4 || t.id_tamanho === 7}) || 0)
            inputs[3].value = g.quantidade_pedido || 0
            tr.insertCell().appendChild(inputs[3])
            //botao acao
            let btn = document.createElement('button')
            btn.className = 'btn btn-outline-danger  m-0 p-0 w-100'
            btn.appendChild(document.createTextNode('X'))
            btn.type = 'button'
            btn.setAttribute( "onClick", "table_del_ref("+e.referencia+")" );
            tr.insertCell().appendChild(btn)
            //setando tds estilos 3,4,5,6
            for(let i = 0; i < tr.children.length; i++){
                if(i > 2)
                    tr.children[i].width = "10%"
            }
            
        });
    }
</script>

</body>
</html>